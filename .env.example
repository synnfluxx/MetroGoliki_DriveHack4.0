# GigaChat API Configuration
GIGACHAT_API_KEY=your_gigachat_api_key_here

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# CORS Configuration (comma-separated list of allowed origins)
# For development: http://localhost:3000,http://localhost:8080
# For production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:8080

# SSL Verification (true/false)
SSL_VERIFY=true

# GigaChat Model
GIGACHAT_MODEL=GigaChat

# Environment (development/production)
ENVIRONMENT=development

# Salute TTS Configuration
# SALUTE_API_KEY may be claimed:
#   curl -k -L -X POST 'https://ngw.devices.sberbank.ru:9443/api/v2/oauth' \
#       -H 'Content-Type: application/x-www-form-urlencoded' \
#       -H 'Accept: application/json' \
#       -H 'RqUID: <CLient ID>' \
#       -H 'Authorization: Basic <Autorization Key>' \
#       --data-urlencode 'scope= SALUTE_SPEECH_PERS'
## TOKEN KEY EXPIRES IN 30 MINUTES!!!!!
SALUTE_API_KEY=your_authorization_key_or_access_token_here
SALUTE_VOICE=Nec_24000
# Available voices: Nec_24000, Bys_24000, May_24000, Tur_24000, Ost_24000, etc.
# Audio format is set to wav16 in code (other options: pcm16, opus, alaw)

# Knowledge Base Configuration
# Путь к файлу с чанками для поиска (опционально)
# Если не указан, используется data/chunks.json
KNOWLEDGE_BASE_FILE=data/chunks.json
